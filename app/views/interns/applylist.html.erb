<div class="page-header">
  <%= link_to interns_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to @intern, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-info-sign"></span>
    Show
  <% end %>
  <h1>實習申請清單</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>班級</th>
            <th>學號</th>
            <th>姓名</th>
            <th>性別</th>
            <th>電話</th>
            <th>Email</th>
            <th>住址</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @interns) do |intern| %>
            <td><%= intern.classlevel %></td>
            <td><%= intern.sn %></td>
            <td><%= intern.name %></td>
            <td><%= intern.gender %></td>
            <td><%= intern.tel %></td>
            <td><%= intern.email %></td>
            <td><%= intern.address %></td>
      <% end %>
    </tbody>
  </table>
</div>
